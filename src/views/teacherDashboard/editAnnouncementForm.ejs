            color: rgb(255, 215, 0); /* Gold color */
            font-size: 24px;
            letter-spacing: 7.20px;
            line-height: normal;
            z-index: 1;
        }
        
        .logo {
            position: absolute;
            width: 49px;
            height: 50px;
            top: 30px;
            left: 185px;
            z-index: 1;
        }
        .logo-bg {
            position: absolute;
            width: 70px;
            height: 65px;
            top: 24px;
            left: 175px;
            background-color: #111010f0;
            border-radius: 100px;
            z-index: 0;
        }

        .ellipse-top {
    position: absolute;
    width: 307px;
    height: 290px;
    top: -90px;
    left: 1100px;
    z-index: -1;
}

.ellipse-left {
    position: absolute;
    width: 307px;
    height: 290px;
    top: 58vh;
    left: -90px;
    z-index: -1;
}

.ellipse-right {
    position: absolute;
    width: 290px;
    height: 249px;
    top: 72vh;
    left: 1050px;
    z-index: -1;
}

    .container {
        overflow-y: scroll;
    min-width: 896px ;
    min-height: 601px;
    width: 50%; /* Adjust width as needed */
    text-align:left; /* Centers form content */
    background: #f8f9fa; /* Optional background */
    padding: 20px; /* Adds spacing inside */
    border-radius: 20px; /* Rounded corners */
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Optional shadow */
}

.edit-announcement{
    font-family: 'Metrophobic',sans-serif;
    font-size: 32px;
    font-style: normal;
    font-weight: 400;
    text-align: left;
    padding-top: 0px;
}



.title input{
    min-width: 849px;
    min-height: 62px;
    flex-shrink: 0;
    border: 2px solid #C622CA;
    border-radius: 10px;
    background-color: #F0EAEA;
    margin-top: 10px;
}

.message textarea{
    min-width: 849px;
    min-height: 316px;
    border: 2px solid #C622CA;
    border-radius: 10px;
    background-color: #F0EAEA;
    margin-top: 35px;
    margin-bottom: 10px;
}

.title input::placeholder {
    font-family: 'Metrophobic', sans-serif;
    font-size: 20px; /* Change this to your desired size */
    color: #8A8484; /* Optional: Change placeholder color */
    opacity: 1; /* Ensures placeholder is fully visible */
    font-style: normal;
    line-height: normal;
    font-weight: 400;
    padding-left: 10px;
}

.message textarea::placeholder {
    font-family: 'Metrophobic', sans-serif;
    font-size: 20px; /* Change this to your desired size */
    color: #8A8484; /* Optional: Change placeholder color */
    opacity: 1; /* Ensures placeholder is fully visible */
    font-style: normal;
    line-height: normal;
    font-weight: 400;
    padding-left: 10px;
}

.buttons {
    display: flex;
    justify-content: flex-end; /* Aligns buttons to the right edge */
    gap: 15px; /* Adds space between buttons */
    margin-bottom: 10px; /* Adds spacing below the buttons */
}

.buttons button{
    min-width: 91.795px;
    min-height: 34.626px;
    background-color: #C622CA;
    border-radius: 5px;
    color: white; /* Ensures text is visible */
    border: none;
    font-size: 16px;
    font-family: 'Metrophobic',sans-serif;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-align: center;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none; /* Removes underline from <a> */
    transition: background-color 0.3s ease;

}

.buttons button:hover{
    background-color: #A51E9C ;
}

.btn-primary {
            background-color: #C622CA;
            border: none;
            padding: 10px 10px;
            border-radius: 5px;
            cursor: pointer;
            color: white;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #A51E9C ;
        }


.btn-secondary {
            background-color: white;
            font-family: 'Metrophobic',sans-serif;
            border: 2px solid #C622CA;
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
            color: black;
            transition: background-color 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #EA4EED;
            border-color: #EA4EED;
        }


    </style>
</head>
<body>
    <div class="desktop">
    <!-- Insert Brand Name -->
    <div class="brand-name">Learni</div>
    <!-- Logo Image -->
    <img src="/images/logo.png" alt="LearniX Logo" class="logo">
    <!-- Background Element -->
    <div class="logo-bg"></div>
    <img src="/images/ellipse-16.png" alt="Ellipse Shape" class="ellipse-top">

    
        <div class="container">
        <h2 class="edit-announcement">Update Announcement</h2>
        
        <form action="/teacher/announcement/update/<%= announcement._id %>" method="POST">

            <!-- Buttons (Inside form but above input fields) -->
            <div class="buttons d-flex gap-3 button-container justify-content-end">
                <button type="submit" class=" btn btn-success"> Update </button>
            </div>

            <!-- Hidden Inputs for Class & Subject -->
            <input type="hidden" name="classNumber" value="<%= announcement.classNumber %>">
            <input type="hidden" name="subjectName" value="<%= announcement.subjectName %>">

            <div class="title">
                <input type="text" class="" name="title" value="<%= announcement.title %>" placeholder="Title" required>
            </div>

            <div class="message">
                <textarea class="" name="message" rows="4" placeholder="Write here..." required><%= announcement.message %></textarea>
            </div>
            <div class="buttons d-flex gap-3 button-container justify-content-end">
                <a href="/teacher/class/<%= announcement.classNumber %>/<%= announcement.subjectName %>" class="btn btn-secondary"> ‚Üê Back </a>
            </div>
        </form>
    </div>

    <img src="/images/ellipse-16.png" alt="Ellipse Shape" class="ellipse-left">
    <img src="/images/ellipse-13.png" alt="Ellipse Shape" class="ellipse-right">

    </div>
</body>
</html>
