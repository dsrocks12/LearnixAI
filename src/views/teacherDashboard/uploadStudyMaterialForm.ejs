        .container {
          margin-top: 8vh;
    overflow-y:scroll;
    min-width: 896px ;
    max-height: 601px;
    width: 50%; /* Adjust width as needed */
    text-align:left; /* Centers form content */
    background: #f8f9fa; /* Optional background */
    padding: 20px; /* Adds spacing inside */
    border-radius: 20px; /* Rounded corners */
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.25); /* Optional shadow */
}

.upload-study-material{
    font-family: 'Metrophobic',sans-serif;
    font-size: 32px;
    font-style: normal;
    font-weight: 400;
    text-align: left;
    padding-top: 0px;
}

#title {
    min-width: 849px;
    min-height: 52px;
    flex-shrink: 0;
    border: 2px solid #C622CA;
    border-radius: 10px;
    background-color: #F0EAEA;
    margin-top: 10px;
    padding-left: 10px;
}

#file {
    min-width: 849px;
    min-height: fit-content;
    flex-shrink: 0;
    border: 2px solid #C622CA;
    border-radius: 10px;
    background-color: #F0EAEA;
    margin-top: 10px;
}

form textarea{
    min-width: 849px;
    min-height: 316px;
    border: 2px solid #C622CA;
    border-radius: 10px;
    background-color: #F0EAEA;
    margin-top: 10px;
}

form label{
  font-size: 24px;
  font-family: 'Metrophobic', Arial, Helvetica, sans-serif;
}

form input::placeholder {
    font-family: 'Metrophobic', sans-serif;
    font-size: 16px; /* Change this to your desired size */
    color: #8A8484; /* Optional: Change placeholder color */
    opacity: 1; /* Ensures placeholder is fully visible */
    font-style: normal;
    line-height: normal;
    font-weight: 400;
}

form textarea::placeholder {
    font-family: 'Metrophobic', sans-serif;
    font-size: 16px; /* Change this to your desired size */
    color: #8A8484; /* Optional: Change placeholder color */
    opacity: 1; /* Ensures placeholder is fully visible */
    font-style: normal;
    line-height: normal;
    font-weight: 400;
    padding-left: 5px;
}

.buttons {
    display: flex;
    justify-content: flex-end; /* Aligns buttons to the right edge */
    gap: 0px; /* Adds space between buttons */
    margin-bottom: 5px; /* Adds spacing below the buttons */
}

.buttons button{
    min-width: 91.795px;
    min-height: 34.626px;
    background-color: #C622CA;
    border-radius: 5px;
    color: white; /* Ensures text is visible */
    border: none;
    font-size: 16px;
    font-family: 'Metrophobic',sans-serif;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-align: center;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none; /* Removes underline from <a> */
}




.btn-primary {
            background-color: #C622CA;
            border: none;
            padding: 10px 10px;
            border-radius: 5px;
            cursor: pointer;
            color: white;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #A51E9C ;
        }

        .btn-secondary {
            background-color: white;
            border: 2px solid #C622CA;
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
            color: black;
            margin-top: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #EA4EED;
            border-color: #EA4EED;
        }

  </style>
