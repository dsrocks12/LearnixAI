<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Onboarding - Add Teachers</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: #f9f9f9;
        }
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #333;
        }
        .class-section {
            margin-bottom: 20px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 15px;
        }
        .class-section:last-child {
            border-bottom: none;
        }
        .subject-section {
            margin-top: 10px;
        }
        .email-input-group {
            margin: 10px 0;
        }
        .email-input-group input {
            width: calc(100% - 120px);
            padding: 8px;
            margin-right: 10px;
        }
        .add-button {
            padding: 8px 15px;
            background: #4facfe;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .add-button:hover {
            background: #00f2fe;
        }
        .submit-button {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background: #4facfe;
            color: #fff;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .submit-button:hover {
            background: #00f2fe;
        }
    </style>
    <script>
        function addEmailField(subjectId) {
            const emailGroup = document.createElement('div');
            emailGroup.className = 'email-input-group';
            emailGroup.innerHTML = `

                <input type="email" name="teachers[${subjectId}][]" placeholder="Enter teacher's email" required>
                <button type="button" class="add-button" onclick="removeEmailField(this)">Remove</button>
            `;
            document.getElementById(subjectId).appendChild(emailGroup);
        }

        function removeEmailField(button) {
            button.parentElement.remove();
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>Add Teachers</h1>
        <!-- Hidden input field for name -->
        <form action="4" method="POST">
            <input type="hidden" name="name" value="<%= name %>"> <!-- Send name to POST request -->

            <% Object.keys(data).forEach(className => { %>
                <div class="class-section">
                    <h2><%= className %></h2>
                    <% data[className].forEach(subject => { %>
                        <div class="subject-section">
                            <h3><%= subject %></h3>
                            <div id="<%= className %>_<%= subject %>"></div>
                            <button type="button" class="add-button" onclick="addEmailField('<%= className %>_<%= subject %>')">
                                Add Teacher Email
                            </button>
                        </div>
                    <% }); %>
                </div>
            <% }); %>
            <button type="submit" class="submit-button">Submit</button>
        </form>
    </div>
</body>
</html>
