<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
        button {
            display: block;
            margin: 10px auto;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Dashboard</h1>

    <script>
        // Get URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const schoolName = urlParams.get('schoolName'); // Extract schoolName from query

        // Ensure schoolName is not null to avoid broken links
        if (schoolName) {
            document.write(`<button onclick="location.href='/school/teachers?schoolName=${encodeURIComponent(schoolName)}'">View Teachers</button>`);
            document.write(`<button onclick="location.href='/school/students?schoolName=${encodeURIComponent(schoolName)}'">View Students</button>`);
        } else {
            document.write("<p>Error: schoolName is missing from the URL.</p>");
        }
    </script>
    
</body>
</html>
