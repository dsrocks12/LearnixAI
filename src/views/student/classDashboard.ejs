<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subject <%= subjectName %> Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }
        .content {
            padding: 20px;
        }
        .section {
            margin-bottom: 20px;
            padding: 15px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .section h3 {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="content">
        <h2>Subject <%= subjectName %> Dashboard</h2>

        <!-- Announcements Section -->
        <div class="section">
            <h3>📢 Announcements</h3>
            <% if (announcements.length === 0) { %>
                <p>No announcements yet.</p>
            <% } else { %>
                <ul>
                    <% announcements.forEach(announcement => { %>
                        <li>
                            <strong><%= announcement.title %></strong>: <%= announcement.message %> <br>
                            <small>
                                🕒 <%= new Date(announcement.createdAt).toLocaleString("en-US", { 
                                    weekday: 'short', 
                                    year: 'numeric', 
                                    month: 'short', 
                                    day: 'numeric', 
                                    hour: '2-digit', 
                                    minute: '2-digit' 
                                }) %>
                            </small>
                            <br>
                            <small>👨‍🏫 Posted by: <%= teacherName %></small>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </div>

        <!-- Assignments Section -->
        <div class="section">
            <h3>📝 Assignments</h3>
            <% if (assignments.length === 0) { %>
                <p>No assignments posted.</p>
            <% } else { %>
                <ul>
                    <% assignments.forEach(assignment => { %>
                        <li>
                            <strong><%= assignment.title %></strong> - Due: <%= assignment.dueDate.toDateString() %>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </div>

        <!-- Study Materials Section -->
        <div class="section">
            <h3>📚 Study Materials</h3>
            <% if (studyMaterials.length === 0) { %>
                <p>No study materials uploaded.</p>
            <% } else { %>
                <ul>
                    <% studyMaterials.forEach(material => { %>
                        <li>
                            <strong><%= material.title %></strong> 
                            - <a href="<%= material.fileUrl %>" target="_blank">View File</a>
                            <br>
                            <small>
                                Uploaded on: <%= new Date(material.createdAt).toLocaleString("en-US", { 
                                    weekday: 'short', 
                                    year: 'numeric', 
                                    month: 'short', 
                                    day: 'numeric', 
                                    hour: '2-digit', 
                                    minute: '2-digit' 
                                }) %>
                            </small>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </div>
    </div>
</body>
</html>
