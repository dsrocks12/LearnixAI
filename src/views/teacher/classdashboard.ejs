<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class <%= classNumber %> Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        function confirmDelete(announcementId) {
            if (confirm("Are you sure you want to delete this announcement?")) {
                fetch(`/teacher/announcement/delete/${announcementId}`, { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        alert("Announcement deleted successfully");
                        window.location.href = window.location.href; // Refresh page
                    })
                    .catch(error => alert("‚ùå Error deleting announcement"));
            }
        }

        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param) || "";
        }

        document.addEventListener("DOMContentLoaded", function () {
            const email = getQueryParam("email");
            const schoolName = getQueryParam("school");

            // Update the "Create Assignment" link dynamically
            const assignmentLink = document.getElementById("createAssignment");
            if (assignmentLink) {
                const baseUrl = `/teacher/assignment/new?classNumber=<%= classNumber %>&subject=<%= subjectName %>`;
                assignmentLink.href = `${baseUrl}&email=${encodeURIComponent(email)}&school=${encodeURIComponent(schoolName)}`;
            }
        });
    </script>
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }
        .content {
            padding: 20px;
            max-width: 800px;
            margin: auto;
        }
        .section {
            margin-bottom: 20px;
            padding: 15px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .section h3 {
            margin-bottom: 10px;
        }
        .btn-primary, .btn-danger, .btn-secondary {
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
            color: white;
            text-decoration: none;
        }
        .btn-primary { background-color: #007bff; }
        .btn-danger { background-color: #dc3545; }
        .btn-secondary { background-color: #6c757d; }
        .announcement-item, .assignment-item, .material-item, .submission-item {
            margin-bottom: 10px;
            padding: 10px;
            background: #f8f9fa;
            border-radius: 5px;
        }
        .timestamp {
            font-size: 0.9rem;
            color: gray;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="content">
        <h2>Class <%= classNumber %> Dashboard</h2>

        <!-- Announcements Section -->
        <div class="section">
            <h3>üì¢ Announcements</h3>
            <a href="/teacher/announcement/new?classNumber=<%= classNumber %>&subjectName=<%= subjectName %>" class="btn btn-primary">‚ûï Create Announcement</a>
            <hr>
            <% if (announcements.length === 0) { %>
                <p>No announcements yet.</p>
            <% } else { %>
                <% announcements.forEach(announcement => { %>
                    <div class="announcement-item">
                        <strong><%= announcement.title %></strong>: <%= announcement.message %>
                        <div class="timestamp">üïí Posted on: <%= new Date(announcement.createdAt).toLocaleString() %></div>
                        <br>
                        <a href="/teacher/announcement/edit/<%= announcement._id %>" class="btn btn-secondary btn-sm">‚úèÔ∏è Edit</a>
                        <button onclick="confirmDelete('<%= announcement._id %>')" class="btn btn-danger btn-sm">üóë Delete</button>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <!-- Assignments Section -->
        <div class="section">
            <h3>üìù Assignments</h3>
            <a id="createAssignment" href="#" class="btn btn-primary">‚ûï Create Assignment</a>
            <hr>
            <% if (assignments.length === 0) { %>
                <p>No assignments posted.</p>
            <% } else { %>
                <% assignments.forEach(assignment => { %>
                    <div class="assignment-item">
                        <strong><%= assignment.title %></strong> - Due: <%= new Date(assignment.dueDate).toLocaleDateString() %>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <!-- Study Materials Section -->
        <div class="section">
            <h3>üìö Study Materials</h3>
            <a href="/teacher/studyMaterial/new?classNumber=<%= classNumber %>&subjectName=<%= subjectName %>" class="btn btn-primary">‚ûï Upload Material</a>
            <hr>
            <% if (studyMaterials.length === 0) { %>
                <p>No study materials uploaded.</p>
            <% } else { %>
                <% studyMaterials.forEach(material => { %>
                    <div class="material-item">
                        <a href="<%= material.fileUrl %>" target="_blank"><%= material.title %></a>
                        <button onclick="confirmDeleteMaterial('<%= material._id %>')" class="btn btn-danger btn-sm">üóë Delete</button>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <script>
            function confirmDeleteMaterial(materialId) {
                if (confirm("Are you sure you want to delete this study material?")) {
                    fetch(`/teacher/studyMaterial/delete/${materialId}`, { method: 'POST' })
                        .then(response => response.json())
                        .then(data => {
                            alert("‚úÖ Study Material deleted successfully");
                            window.location.reload();
                        })
                        .catch(error => alert("‚ùå Error deleting study material"));
                }
            }
        </script>

        <!-- Submissions Section -->
        <div class="section">
            <h3>üì© Submissions</h3>
            <% if (submissions.length === 0) { %>
                <p>No submissions received.</p>
            <% } else { %>
                <% submissions.forEach(submission => { %>
                    <div class="submission-item">
                        <%= submission.studentEmail %> submitted <strong><%= submission.assignmentTitle %></strong>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>
</body>
</html>
