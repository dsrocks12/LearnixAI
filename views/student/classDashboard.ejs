    line-height: normal;
    max-width: 800px;
    width: 90%;
    margin-bottom: 20px; /* Reduced space */
    text-align: left; /* Align text to the left */
    padding-left: 0px; /* Align with content inside .content-box */
}

.ellipse-left {
    position: absolute;
    width: 307px;
    height: 290px;
    top: 97vh;
    left: -90px;
    z-index: -1;
}

.ellipse-right {
    position: absolute;
    width: 290px;
    height: 249px;
    top: 106vh;
    left: 1150px;
    z-index: -1;
}

.ellipse-mid {
    position: absolute;
    left: 380px;
    width: 290px;
    height: 249px;
    top: 200vh;
    z-index: -1;
}

.announcement-item, .assignment-item, .material-item, .submission-item, .event-item {
    margin-bottom: 15px;
    padding: 15px;
    border-radius: 10px;
    background: linear-gradient(90deg,#FDF9FF 0%, #9B8CA0 97%);
}
        .content {
            padding: 20px;
            width: 80%;
            margin: 0 auto;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .assignments-section {
            width: 100%;
            margin-bottom: 20px;
            padding: 15px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .section h3 {
            margin-bottom: 20px;
        }

        .timestamp {
            font-size: 0.9rem;
            color: gray;
            margin-top: 5px;
        }

        /* Style for the file-attachment section */
.file-attachment {
    margin-top: 10px; /* Adds space between the event details and the file link */
    padding: 5px;
    background-color: transparent; /* Light background to highlight the file section */
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: flex-end; /* Aligns the file link to the left */
}

.file-attachment a {
    color: #007bff; /* Blue color for the file link */
    text-decoration: none; /* Remove underline */
    font-weight: bold;
    font-size: 14px; /* Slightly smaller font size */
    padding: 5px;
    border-radius: 3px;
}

.file-attachment a:hover {
    background-color: #e2e6ea; /* Light gray background on hover */
    color: #0056b3; /* Darker blue on hover */
}

.file-attachment img{
    width: 20px;

}
    </style>
</head>
<body>

    <div class="brand-name">Learni</div>
    <img src="/images/logo.png" alt="LearniX Logo" class="logo">
    <div class="logo-bg"></div>
    <img src="/images/ellipse-16.png" alt="Ellipse Shape" class="ellipse-top">

    
    <div class="all-content">
        <h2>Subject: <%= subjectName %> Dashboard</h2>

            <div class="section">
                <h3>Announcements</h3>
                <div class="content-box">
                <% if (announcements.length === 0) { %>
                    <p>No announcements yet.</p>
                <% } else { %>
                    
                        <% announcements.forEach(announcement => { %>
                            <div class="announcement-item">
                                <strong>üì¢<%= announcement.title %></strong>: <%= announcement.message %> <br> 
                                <small>üïõPosted on:<%= new Date(announcement.createdAt).toLocaleString("en-US", { 
                                    weekday: 'short', 
                                    year: 'numeric', 
                                    month: 'short', 
                                    day: 'numeric', 
                                    hour: '2-digit', 
                                    minute: '2-digit' 
                                }) %></small>
                                <br>
                                <small>üßë‚Äçüè´Posted by: <%= teacherName %></small> 
                            </div>                            
                        <% }) %>
                    
                <% } %>
            </div>
            <img src="/images/ellipse-16.png" alt="Ellipse Shape" class="ellipse-left">
            <img src="/images/ellipse-13.png" alt="Ellipse Shape" class="ellipse-right">
        </div>
            
        <div class="section">
            <h3>Assignments</h3>
            <div class="content-box">
                <% if (assignments.length === 0) { %>
                    <p>No assignments posted.</p>
                <% } else { %>
                    <% assignments.forEach(assignment => { %>
                        <div class="assignment-item">
                            <strong><%= assignment.title %></strong> - Due: <%= new Date(assignment.dueDate).toLocaleDateString() %>
                            <% if (assignment.files && assignment.files.length > 0) { %>
                                <br>
                                <a href="<%= assignment.files[0] %>" download class="btn btn-primary btn-sm">
                                    üì• Download PDF
                                </a>
                            <% } %>
                            <br>
                            
                            <!-- Submission Form -->
                            <form action="/student/dashboard/subject/submit/<%= subjectId %>" method="POST" enctype="multipart/form-data" class="mt-2">
                                <input type="hidden" name="assignmentId" value="<%= assignment._id %>">
                                <input type="hidden" name="classNumber" value="<%= assignment.classNumber %>">
                                <input type="hidden" name="subject" value="<%= assignment.subject %>">
                                <!-- Remove server-side variable reference for email -->
                                <input type="hidden" id="emailInput" name="email">
                                <input type="file" name="submissionFiles" required multiple>
                                <button type="submit" class="btn btn-success btn-sm">üì§ Submit</button>
                            </form>
                            
                            
                            
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
        
        <div class="section">
            <h3>Study Materials</h3>
            <div class="content-box">
                <% if (studyMaterials.length === 0) { %>
                    <p>No study materials uploaded.</p>
                <% } else { %>
                    <% studyMaterials.forEach(material => { %>
                        <div class="material-item">
                            <a href="<%= material.fileUrl %>" target="_blank">
                                <%= material.title %>
                            </a>
                            <a href="<%= material.fileUrl %>" download class="btn btn-primary btn-sm">
                                üì• Download PDF
                            </a>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>

        <div class="section">
            <h2>üìÖ Upcoming Events</h2>
            <div class="content-box">
            <% if (events.length > 0) { %>
                    <% events.forEach(event => { %>
                        <div class="event-item">
                            <strong><%= event.title %></strong>: <%+ event.message %>
                    <div class="timestamp">üïí Posted on: <%= new Date(event.createdAt).toLocaleDateString() %></div>
                    <div class="timestamp">üïí Updated on: <%= new Date(event.updatedAt).toLocaleDateString() %></div>
                    <div class="timestamp">üïí Due date: <%= new Date(event.dueDate).toLocaleDateString() %></div>
                    <% if (event.fileUrl) { %>
                        <div class="file-attachment">
                            <a href="<%= event.fileUrl %>" target="_blank"><img src="/images/fileicon.png" alt="fileicon">View Attached File</a>
                            <% if (event.allowParticipation) { %>
                                <button onclick="participate('<%= event._id %>', '<%= student.email %>', '<%= student.name %>', '<%= student.classNumber %>')" class="btn btn-primary">Participate</button>
                            <% } %>
                        </div>
                    <% } %>
                        </div>
                        <% }); %>
                <% } else { %>
                    <p>No upcoming events.</p>
            <% } %>
        </div>
        </div>
    </div>

    <script>
        // Split the pathname into parts
        const pathParts = window.location.pathname.split('/');
        // The email should be the last part of the path
        const emailFromUrl = pathParts[pathParts.length - 1];
        // Set the hidden input's value to the extracted email
        document.getElementById('emailInput').value = emailFromUrl;
      </script>
          
        
</body>
</html>
